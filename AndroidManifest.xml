<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ijuru.refract"
    android:versionCode="3"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.SET_WALLPAPER"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application android:name=".RefractApplication" android:icon="@drawable/ic_launcher" android:label="@string/app_name" >
        <activity android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:name=".activity.ExplorerActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WallpaperActivity" android:label="@string/str_renderaswallpaper"></activity>
        <activity android:name=".activity.BookmarksActivity" android:label="@string/str_bookmarks"></activity>
        <activity android:name=".activity.SettingsActivity" android:label="@string/str_settings"></activity>
    </application>

</manifest>